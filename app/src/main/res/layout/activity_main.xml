<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/dimen_16_dp"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivOne"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_broken_image_grey"
        android:layout_width="match_parent"
        android:scaleType="fitCenter"
        android:layout_height="@dimen/dimen_150_dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnOne"
        android:layout_marginTop="@dimen/dimen_16_dp"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/btn_background"
        android:paddingStart="@dimen/dimen_16_dp"
        android:paddingEnd="@dimen/dimen_16_dp"
        android:text="Get Random Image One"
        android:textColor="@color/white"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivTwo"
        android:layout_marginTop="@dimen/dimen_16_dp"
        app:layout_constraintTop_toBottomOf="@+id/btnOne"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_broken_image_grey"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:scaleType="fitCenter"
        android:layout_height="@dimen/dimen_150_dp"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnTwo"
        android:layout_marginTop="@dimen/dimen_16_dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/btn_background"
        android:paddingStart="@dimen/dimen_16_dp"
        android:paddingEnd="@dimen/dimen_16_dp"
        android:text="Get Random Image Two"
        android:textColor="@color/white"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@+id/ivTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>